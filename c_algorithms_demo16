 #include <stdio.h>
 #include <math.h>
 #include <stdlib.h>
 #include <time.h>
 #include <string.h>
int main(){
	char *str="furong";
	printf("%d,%10d,%-10d,%010d,%+d\n",123,123,123,123,123);
	printf("%f,%10f,%-10f,%06.3f,%6.2f\n",1.2,1.2,1.2,1.2,1.2);	 
	printf("%s,%10s,%-10s,%6.3s\n",str,str,str,str); 
	int w;
	for(w=10;w<15;w++)
	 printf("%c,%*c\n",'a',w,'a');
	printf("intput an integer\n");
	int x,y; 
	scanf("%3d%5d",&x,&y);
	printf("x=%d,y=%d\n",x,y);
	scanf("%*d%d",&x);
	printf("x=%d\n",x);
	char str2[100],st2[100];
	scanf("%[a-z]%[^a-z]",str2,st2);
	printf("str2=%s,st2=%s\n",str2,st2);
    return 0;
 }
//output:
