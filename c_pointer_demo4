#include <stdio.h>
int main(void){
  int arr[5],*p;
  for(int i=0;i<5;i++){
    arr[i]=i;
  }
  /** 数组和指针 
  	for(p=&arr[0];p!=&arr[5];p++){
  	 printf("%d \n",*p);
  }
  */
  p=&arr[0];
  for(/** int i=0 */;p!=&arr[5];p++/** i++ */){
     printf("%d \n",*p); /**   printf("%d \n",*(p+i));       */
  }
   return 0;
} 
